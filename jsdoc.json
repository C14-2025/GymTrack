{
  "source": {
    "include": [
      "app",
      "components",
      "hooks",
      "lib"
    ],
    "includePattern": ".+\\.(js|jsx|ts|tsx)$", 
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": [
    "@jsdoc/plugin-typescript" 
  ],
  "opts": {
    "encoding": "utf8",
    "destination": "./docs",
    "recurse": true,
    "readme": "./README.md"
  },
  "typescript": {
    "moduleRoot": "app" 
  }
}
